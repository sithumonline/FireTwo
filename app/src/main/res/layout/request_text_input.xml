<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/curry_form_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/form_user_name" />

    <EditText
        android:id="@+id/curry_form_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="top|left"
        android:hint="@string/form_food_name"
        android:inputType="textMultiLine"
        android:lines="6"
        android:minLines="4"
        android:scrollbars="vertical"
        android:scrollHorizontally="false" />

    <EditText
        android:id="@+id/curry_form_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="top|left"
        android:hint="@string/form_food_description"
        android:inputType="textMultiLine"
        android:lines="6"
        android:minLines="4"
        android:scrollbars="vertical"
        android:scrollHorizontally="false" />

</LinearLayout>